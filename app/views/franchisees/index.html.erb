<h1>Customer List</h1>

<table>
  <tr>
    <th>Franchisee Name</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>

<% @franchisees.each do |franchisee| %>
  <tr>
    <td><%= link_to franchisee.franchise_name, franchisee %></td>
    <td><%= link_to 'Edit', edit_franchisee_path(franchisee) %></td>
    <td><%= link_to 'Delete', franchisee, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<% content_for :local_nav do %>
  <%= link_to 'New Franchisee', new_franchisee_path %>
<% end %>