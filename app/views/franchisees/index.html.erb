<h2>Customer List</h2>

<table>
  <tr>
    <th>Customer Name</th>
    <th>Phone</th>
    <th>Contact Email</th>
    <th><% if can? :update, Franchisee %>Edit<% end %></th>
    <th><% if can? :destroy, Franchisee %>Delete<% end %></th>
  </tr>

<% @franchisees.each do |franchisee| %>
  <tr>
    <td><%= link_to franchisee.franchise_name, franchisee %></td>
    <td><%= franchisee.phone %></td>
    <td><%= franchisee.primary_contact.nil? ? '' : franchisee.primary_contact.user.email %></td>
    <td><% if can? :update, franchisee %><%= link_to 'Edit', edit_franchisee_path(franchisee) %><% end %></td>
    <td><% if can? :destroy, franchisee %><%= link_to 'Delete', franchisee, :confirm => 'Are you sure?', :method => :delete %><% end %></td>
  </tr>
<% end %>
</table>

<br />

<% content_for :local_nav do %>
  <% if can? :create, Franchisee %><%= link_to 'New Customer', new_franchisee_path %><% end %>
<% end %>
