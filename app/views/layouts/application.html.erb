<!DOCTYPE html>
<html>
<head>
  <title>Premier Garage Orders: <%= yield(:title) %></title>
  <%= stylesheet_link_tag :all %>
  <%= stylesheet_link_tag 'ui-lightness/jquery-ui-1.8.6.custom.css' %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'jquery-ui-1.8.7.custom.min.js' %>
  <%= csrf_meta_tag %>
  <%= yield(:head) %>
</head>
<body>
  <div id="auth_nav">
    <% if user_signed_in? %>
      Signed in as <%= current_user.email -%>. <%= link_to "Sign out", destroy_user_session_path %>
    <% else %>
      <%= link_to "Sign in", new_user_session_path %>
    <% end %>
  </div>
  <div id="nav">
    <ul>
      <% if user_signed_in? %>
        <li><%= link_to "Jobs", jobs_path %></li>
        <% if current_user.role?(:admin) || current_user.role?(:product_admin) %>
          <li><%= link_to "Franchisees", franchisees_path %></li>
          <li><%= link_to "Items", items_path %></li>
          <li><%= link_to "Properties", properties_path %></li>
        <% end %>
        <% if current_user.role?(:admin) %>
          <li><%= link_to "Users", users_path %></li>
        <% end %>
      <% end %>
    </ul>
  </div>

  <div id="local_nav">
    <%= yield(:local_nav) %>
  </div>
  
  <div id="content">
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "flash_#{name}" -%>
    <% end %>

    <%= yield %>
  </div>

</body>
</html>
