<%- headers = ["Order Name","Item Name","Purchase Part ID","Color","Quantity","Width","Height","Depth"] -%>
<%- csv_options = {:force_quotes => true, :col_sep => ';'} -%>
<%= CSV.generate_line(headers,csv_options).html_safe %>
<%- 
@report_data.each_pair do |key, job|
  job[:items].each do |job_item| 
    row = [
            job[:name],
            job_item[:item_name],
            job_item[:purchase_part_id],
            job_item[:color],
            job_item[:quantity],
            job_item[:width],
            job_item[:height],
            job_item[:depth]
          ]
-%><%=CSV.generate_line(row, csv_options).html_safe%>
<%- end
end -%>