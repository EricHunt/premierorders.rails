<div class="form_fields">

  <p id="quote-title">ORDER CONFIRMATION</p>

  <div id="header-leftcol">
    <img id="print-logo" src="/images/Premier Logo.jpg" />
    <div class="left50 clear">
      <dl class="billing_address">
        <dt>Billing Address</dt>
        <dd>
          <%= @job.franchisee.franchise_name -%>
          <% if @job.ship_to %>
            <br/><%= @job.ship_to.address1 -%>
            <% if @job.ship_to.address2 %>
              <br/><%= @job.ship_to.address2 -%>
            <% end %>
            <br/><%= @job.ship_to.city -%>, <%= @job.ship_to.state -%> <%= @job.ship_to.postal_code -%>
          <% end %>
        </dd>
      </dl>
    </div>
    <div class="right50">
      <dl class="shipping_address">
        <dt>Shipping Address</dt>
        <dd>
          <%= @job.franchisee.franchise_name -%>
          <% if @job.ship_to %>
            <br/><%= @job.ship_to.address1 -%>
            <% if @job.ship_to.address2 %>
              <br/><%= @job.ship_to.address2 -%>
            <% end %>
            <br/><%= @job.ship_to.city -%>, <%= @job.ship_to.state -%> <%= @job.ship_to.postal_code -%>
          <% end %>
        </dd>
      </dl>
    </div>
  </div>

  <div id="header-rightcol">
    <dl class="job_number">
      <dt>Job Number</dt>
      <dd><%= @job.job_number -%></dd>
    </dl>

    <dl class="job_name">
      <dt>Job Name</dt>
      <dd><%= @job.name -%></dd>
    </dl>

    <dl class="mfg_plant">
      <dt>MFG Plant</dt>
      <dd><%= @job.mfg_plant -%></dd>
    </dl>

    <dl class="due_date">
      <dt>Due Date</dt>
      <dd><%= @job.due_date %></dd>
    </dl>

    <dl class="ship_date">
      <dt>Ship Date</dt>
      <dd><%= @job.ship_date %></dd>
    </dl>

    <dl class="ship_method">
      <dt>Ship Via</dt>
      <dd><%= @job.ship_method %></dd>
    </dl>

    <dl class="tracking_number">
      <dt>Tracking #</dt>
      <dd><%= @job.tracking_number %></dd>
    </dl>
  </div>

  <dl class="special_instructions">
    <dt>Special Instructions</dt>
    <dd><%= @job.comment -%></dd>
  </dl>

  <dl class="job_total">
    <dt>Total Price</dt>
    <dd>
      <%= "$%.2f" % @job.total -%><br/>
      <% if @job.placement_date.nil? %><%= button_to 'Place Order', place_order_job_path(@job), :confirm => 'Are you sure you wish to place this order?' %><% end %>
    </dd>
  </dl>

  <dl class="items">
    <dt>Items</dt>
    <dd><%= render :partial => 'items_table', :locals => {:job_items => @job.job_items.order('tracking_id').select{|i| !i.inventory?}} %></dd>
  </dl>

  <p>THE FOLLOWING INVENTORY ITEMS ARE REQUIRED BUT NOT INCLUDED WITH THIS ORDER:</p>
  <dl class="inventory_items">
    <dt>Inventory Items</dt>
    <dd><%= render :partial => 'items_table', :locals => {:job_items => @job.job_items.order('tracking_id').select{|i| i.inventory?}} %></dd>
  </dl>

  <hr />


  <div id="quote-footer">
    <dl class="franchisee-name">
        <dt>PREMIERGARAGE SYSTEMS LLC</dt>
        <dd>
          21405 N. 15th Lane<br/>
          Phoenix, AZ 85027
        </dd>
    </dl>

    <dl class="franchisee-phone">
      <dt>PHONE</dt>
      <dd>480.483.3030</dd>
    </dl>

    <dl class="franchisee-fax">
      <dt>FAX</dt>
      <dd>480.483.3795</dd>
    </dl>

    <dl class="franchisee-web">
      <dt>WEB</dt>
      <dd>www.premiergarage.com</dd>

    </dl>

  </div>

  
  
</div>

<% content_for :local_nav do %>
  <%= link_to 'Edit', edit_job_path(@job) %> |
  <%= link_to 'Show', job_path(@job) %> |
  <%= link_to 'Cutrite', cutrite_job_path(@job) %> |
  <%= link_to 'List', jobs_path %>
<% end %>

<% content_for :head do %>
  <style type="text/css" media="screen">
    #print-logo, #quote-title {display: none;}
  </style>
  <style type="text/css" media="all">
    dl {
      overflow: hidden;
      margin: 0;
    }
    dt {
      font-weight: bold;
      float: left;
      clear: left;
      width: 10em;
      margin: 0 0 .25em;
    }
    dd {
      width: auto !important;
      margin: 0;
      float: left;
    }
    dl.special_instructions, dl.items, dl.inventory_items, dl.shipping_address, dl.billing_address,
    dl.special_instructions dt, dl.items dt, dl.inventory_items dt, dl.shipping_address dt, dl.billing_address dt,
    dl.special_instructions dd, dl.items dd, dl.inventory_items dd, dl.shipping_address dd, dl.billing_address dd,
    dl.franchisee-name dt, dl.franchisee-phone dt, dl.franchisee-fax dt, dl.franchisee-web dt,
    dl.franchisee-name dd, dl.franchisee-phone dd, dl.franchisee-fax dd, dl.franchisee-web dd{
      clear: both; float: none; width: 100%;
    }
    dl.ship_date {margin-top: 1em;}
    dl.job_total {margin: 1.5em 0;}
    dl.inventory_items {margin-bottom: 5em;}
    dl.franchisee-name, dl.franchisee-phone, dl.franchisee-fax, dl.franchisee-web {
      float: left;
      width: 25%;
      text-align: right;
      margin-top: 1em;
    }
    table {width: 100%; border-collapse: collapse;}
    td, th {border: 1px solid #ccc; padding: .1em .25em;}
    th {background-color: #aaa;}
    tr:nth-child(odd)   { background-color:#eee; }

    #header-leftcol {float: left; width: 55%;}
    #header-rightcol {float: right; width: 45%;}

    .clear {clear: both;}
    .left50 {float: left; width: 50%;}
    .right50 {float: right; width: 50%;}
  </style>
  <style type="text/css" media="print">
    #quote-title {text-align: center;}
    #print-logo {float: left;}
    body {
      background-color: white;
      color: black;
      font: 9pt/12pt Arial, Helvetica, sans-serif;
    }

    a {color: black; text-decoration: none;}
    #auth_nav, #nav, #local_nav {display: none;}
  </style>
<% end %>
